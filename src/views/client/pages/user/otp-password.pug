doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Xác Thực OTP
    link(rel="stylesheet" href="/client/css/auth.css")

  body
    .login-container
      .login-card
        //- Logo & Title
        .logo-container
          .logo
            svg(fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z")
          h1.login-title Xác thực OTP
          p.login-subtitle Nhập mã OTP đã được gửi đến email của bạn

        //- Success Message
        .success-message#successMessage
          | Xác thực thành công! Đang chuyển hướng...

        if error.length > 0 
          .error-message#errorMessage
            | #{error}

        //- OTP Verification Form
        form#otpForm(action=`/user/password/otp` method="POST")

          //- Email (readonly)
          .form-group
            label.form-label(for="email") Email
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207")
              input.form-input(
                type="email"
                id="email"
                name="email"
                value=email
                readonly
                required
              )

          //- OTP Input
          .form-group
            label.form-label(for="otp") Mã OTP
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14")
              input.form-input(
                type="text"
                id="otp"
                name="otp"
                placeholder="Nhập mã 6 số"
                maxlength="6"
                pattern="[0-9]{6}"
                required
              )

          //- Submit Button
          button.btn-login(type="submit") Xác nhận

        //- Resend OTP Link
        //- .forgot-password
        //-   a(href="#" id="resendOtp") Gửi lại mã OTP

        //- Back to Login Link
        .signup-link
          a(href="/user/login") Quay lại đăng nhập

    script.
      const errorMessage = document.getElementById('errorMessage');

      if(errorMessage){
        errorMessage.classList.add('show');
          setTimeout(() => {
            errorMessage.classList.remove('show');
          }, 5000);
      }