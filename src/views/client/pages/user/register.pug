doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Đăng Ký
    link(rel="stylesheet" href='/client/css/auth.css')


  body
    .register-container
      .register-card
        //- Logo & Title
        .logo-container
          .logo
            svg(fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z")
          h1.register-title Tạo tài khoản mới

        //- Error/Success Message
        if error.length > 0 
          .error-message#errorMessage
            | #{error}


        //- Register Form
        form#registerForm(method="POST" action="/user/register")

          //- Username
          .form-group
            label.form-label(for="fullName") Tên đăng nhập * 
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z")
              input.form-input(
                type="text"
                id="fullName"
                name="fullName"
                placeholder="Nguyễn Văn A"
                required
              )

          //-email
          .form-group
            label.form-label(for="email") Email *
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207")
              input.form-input(
                type="email"
                id="email"
                name="email"
                placeholder="email@example.com"
                required
              )

          //- Password
          .form-group
            label.form-label(for="password") Mật khẩu *
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z")
              input.form-input(
                type="password"
                id="password"
                name="password"
                placeholder="••••••••"
                required
              )
              button.password-toggle#togglePassword(type="button")
                svg#eyeIcon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z")

          //- Confirm Password
          .form-group
            label.form-label(for="passwordConfirm") Xác nhận mật khẩu *
            .input-wrapper
              svg.input-icon(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z")
              input.form-input(
                type="password"
                id="passwordConfirm"
                name="passwordConfirm"
                placeholder="••••••••"
                required
              )
              button.password-toggle#toggleConfirmPassword(type="button")
                svg#eyeIcon2(fill="none" stroke="currentColor" viewBox="0 0 24 24")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                  path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z")

          //- Register Button
          button.btn-register(type="submit") Đăng ký

        //- Login Link
        .login-link
          | Đã có tài khoản? 
          a(href="/user/login") Đăng nhập ngay

    script(src="/client/js/user.js") 
