mixin box-alert-success(time = 5000 )
  if success.length > 0 
    div(
      class = "success-message"
      show-alert
      data-time = time
    )#successMessage
      | #{success}

mixin box-alert-error(time = 5000 )
  if error.length > 0  
    div(
      class = "error-message"
      show-alert
      data-time = time
    )#errorMessage
      | #{error}

mixin box-alert-warning(time = 5000 )
  if warning.length  > 0 
    div(
      class = "show-alert success warning"
      show-alert
      data-time = time
    )
      | #{warning}
      i(class="fa-solid fa-delete-left" close-alert)