mixin box-item-category(listItem , keySearch = "")
  .container.mt-2
    .container-wraper
      .container-menu 
        .row
          .col-3.col-md-3
            div(class = "box-menu") 
              i(class = "fa-solid fa-magnifying-glass text")
              form(
                action=""
                form-Search
                )
                input(
                  type="text" 
                  class = "box-default text" 
                  placeholder = "Search"
                  name = "keySearch"
                  value = keySearch 
                  ) 
          .col-2.col-md-2
            div(class = "box-menu")
              select(name="" class = "box-default text" select-change-status)
                option(value="") -- Trạng thái -- 
                option(value="active") Hoạt động
                option(value="inactive") Ngừng hoạt động

          .col-2.col-md-2
            div(class = "box-menu")
              select(name="" class = "box-default text")
                option(value="" active class = "box-default text") -- Danh mục --
          .col-2.col-md-2
            div(class = "box-menu")
              select(name="" class = "box-default text" select-change-multiple)
                option(value="" active class = "box-default text") -- Hành động --
                option(value="delete") Xóa 
                option(value="active") Hoạt động
                option(value="inactive") Ngừng hoạt động

          .col-2.col-md-2
            //- div(class = "box-menu")
            //-   select(name="" class = "box-default text" select-change-position)
            //-     option(value="") -- Sắp xếp theo --
            //-     option(value="position-asc") Vị trí tăng dần 
            //-     option(value="position-desc") Vị trí giảm dần 
            //-     option(value="price-asc") Giá tăng dần 
            //-     option(value="price-desc") Giá giảm dần

          .col-1.col-md-1
            div(class = "box-menu box-menu-icon")
              i(class = "fa-solid fa-rotate")
      .container-header-item
        .row 
          .col-1 
            div 
              input(type="checkbox" name="check-all")
          .col-4
            div Tên danh mục
          .col-2
            div Ảnh 
          .col-1
            div Ví trí 
          .col-2  
            div Trạng thái 
      .container-list-item(
      )
        each item in listItem
          .row.box-item
            .col-1 
              div 
                input(type="checkbox" 
                  name = "id" 
                  data-id = item.id
                )
            .col-4
              div(class = "box-title") 
                div.title #{item.title}
                .box-sub-menu 
                  if role.permissions.includes("product-category_edit")
                    a(class = "btn-revise" href = `/admin/category/edit/` + item.id) Sửa
                  if role.permissions.includes("product-category_delete")
                    button(class = "btn-delete"
                      data-id = item.id
                      data-title = item.title
                      ) Xóa
                  button(class = "btn-active"
                      change-status = `${item.status}-${item.id}`
                      ) Hoạt động 
                  button(class = "btn-inactive"
                    change-status = `${item.status}-${item.id}`
                    ) Ngừng hoạt động
            .col-2
              div 
                img(src=item.thumbnail, alt=item.title)  
            .col-1
              div #{item.position} 
            .col-2  
              div   
                if item.status == "active"
                  button(class = "status-item active ") Hoạt động  
                else 
                  button(class = "status-item inactive") Ngừng hoạt động 