extends ../../layout/layoutDefault.pug
include ../../mixins/box-alert.pug
include ../../mixins/box-role.pug

block main 
  +box-alert-success(5000)
  +box-alert-error(5000)
  .box-menu 
    h4 #{title}
    if link != ""
      a( class = "button-box-menu" button-submit) 
        | Cập nhật 

  .container.mt-2
    .container-wraper
      .card
        .card-header 
          .row 
            .col-4 
            each role in roles 
              .col-4.text-center 
                span #{role.title}
                input(
                  name-id = role.id
                  type="text" 
                  hidden  
                  )
        .card-body 
          .row 
            .col-4.text-start
              span Chọn tất cả
            .col-4.text-center 
              input(type="checkbox" name="")
            .col-4.text-center 
              input(type="checkbox" name="")

      +box-role(roles , "product" , "Sản phẩm")

      +box-role(roles , "product-category" , "Danh mục Sản phẩm")